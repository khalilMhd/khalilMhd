        "class student():\n",
        "  def __init__(self, first_name, last_name, grades):\n",
        "\n",
        "    self.name = first_name\n",
        "    self.lname = last_name\n",
        "    self.grade = grades\n",
        "\n",
        "  def full_name(self):\n",
        "      return f\"{self.name} {self.lname} {self.grade}\"\n",
        "  def statue(self):\n",
        "\n",
        "      if self.grade >= 60:\n",
        "          return \"passed\"\n",
        "      elif self.grade < 60:\n",
        "          return \"faild\"\n",
        "      else:\n",
        "          quit()\n",
        "\n",
        "student_1 = student(\"khalil\", \"mhd\", 60)\n",
        "student_2 = student(\"yassin\",\" ouacha\", 30)\n",
        "student_3 = student(\"ahmed\",\"nhd\", 90)\n",
        "student_4 = student(\"hind\",\"mhd\", 100)\n",
        "student_5 = student(\"fatimzhrea\",\"nhd\", 10)\n",
        "\n",
        "print(student_1.full_name(), student_1.statue())\n",
        "print(student_2.full_name(), student_2.statue())\n",
        "print(student_3.full_name(), student_3.statue())\n",
        "print(student_4.full_name(), student_4.statue())\n",
        "print(student_5.full_name(), student_5.statue())\n",
        "\n"
      ]
